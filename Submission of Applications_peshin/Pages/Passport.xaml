<Page x:Class="Submission_of_Applications_peshin.Pages.Passport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Submission_of_Applications_peshin.Pages"
           mc:Ignorable="d" 
      Title="Passport" Height="700">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <Grid Background="#F8F9FA" Margin="0,0,0,-21">
            <Grid Margin="0,0,0,645" Background="White">
                <Image Height="40" Margin="10,10,742,0" VerticalAlignment="Top" Source="/Images/logo.png"/>
                <Label Content="Электронная приемная компания" Margin="55,1,410,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
                <Label Content="Пермского авиационного техникума им. А.Д. Швецова" Margin="55,24,424,0" VerticalAlignment="Top"/>
            </Grid>
            <Grid Margin="0,60,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top"/>

                <Label Content="Паспортные данные:" Margin="15,17,10,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
                <Label Content="Фамилия:" Margin="15,46,10,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtLastName" Height="24" Margin="15,76,10,0" VerticalAlignment="Top"/>
                <Label Content="Имя:" Margin="10,46,10,0" VerticalAlignment="Top" Grid.Column="1"/>
                <TextBox x:Name="txtFirstName" Height="24" Margin="10,76,10,0" VerticalAlignment="Top" Grid.Column="1"/>
                <Label Content="Отчество:" Margin="10,46,10,0" VerticalAlignment="Top" Grid.Column="2"/>
                <TextBox x:Name="txtMiddleName" Height="24" Margin="10,76,10,0" VerticalAlignment="Top" Grid.Column="2"/>
                <Label Content="Дата рождения:" Margin="15,105,10,0" VerticalAlignment="Top"/>
                <DatePicker x:Name="dpBirthDate" Height="24" Margin="15,136,10,0" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
                <Label Content="Гражданство:" Margin="15,171,10,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtCitizenship" Height="24" Margin="10,202,10,0" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
                <Label Content="Место рождения:" Margin="10,233,10,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtBirthPlace" Height="24" Margin="10,259,10,0" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
                <Label Content="Адрес по прописке:" Margin="20,400,10,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtRegistrationAddress" Height="24" Margin="20,426,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <Label Content="Район:" Margin="10,395,10,0" VerticalAlignment="Top" Grid.Column="2"/>
                <TextBox x:Name="txtRegistrationDistrict" Height="24" Margin="10,426,10,0" VerticalAlignment="Top" Grid.Column="2"/>
                <Label Content="Серия и номер паспорта:" Margin="10,288,10,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtPassportNumber" Height="24" Margin="10,311,10,0" VerticalAlignment="Top"/>
                <Label Content="Дата выдачи:" Margin="10,285,10,0" VerticalAlignment="Top" Grid.Column="1"/>
                <DatePicker x:Name="dpIssueDate" Height="24" Margin="10,311,10,0" VerticalAlignment="Top" Grid.Column="1"/>
                <Label Content="Код подразделения:" Margin="10,288,10,0" VerticalAlignment="Top" Grid.Column="2"/>
                <TextBox x:Name="txtDepartmentCode" Height="24" Margin="10,314,10,0" VerticalAlignment="Top" Grid.Column="2"/>
                <Label Content="Кем выдан:" Margin="10,340,10,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtIssuedBy" Height="24" Margin="10,371,10,0" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
                <Label Content="Адрес проживания фактический:" Margin="20,455,10,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtActualAddress" Margin="23,481,10,0" Grid.ColumnSpan="2" Height="24" VerticalAlignment="Top"/>
                <Label Content="Район:" Margin="10,455,10,0" VerticalAlignment="Top" Grid.Column="2"/>
                <TextBox x:Name="txtActualDistrict" Height="24" Margin="10,487,6,0" VerticalAlignment="Top" Grid.Column="2"/>
                <Label Content="Прикрепите сканы страниц паспорта с фотографией и действующей пропиской" Margin="10,515,10,0" FontWeight="SemiBold" Grid.ColumnSpan="2" Height="26" VerticalAlignment="Top"/>
                <Label Content="(Формат документов должен быть PNG, JPEG или PDF, а максимальный размер каждого файла 5 МБ)" Margin="10,541,10,0" Background="{x:Null}" FontSize="10" Foreground="Red" Grid.ColumnSpan="2" Height="23" VerticalAlignment="Top"/>
                <Button Content="Выбрать..." Margin="134,569,6,0" BorderThickness="0" Click="SelectFile_Click" Grid.Column="2" Height="24" VerticalAlignment="Top"/>
                <Button x:Name="btnContinue" Content="Продолжить" Margin="104,600,10,0" BorderThickness="0" Click="Continue_Click" Grid.Column="2" Height="25" VerticalAlignment="Top"/>
                <TextBox x:Name="txtPassportScan" Margin="10,569,135,0" Grid.ColumnSpan="3" Height="24" VerticalAlignment="Top"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
