<Page x:Class="Submission_of_Applications_peshin.Pages.Status"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Submission_of_Applications_peshin.Pages"
           mc:Ignorable="d" 
      d:DesignHeight="410" d:DesignWidth="792"
      Title="Status">
    <Grid Background="#F8F9FA">
        <Grid Margin="0,0,0,349.6" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="40" Source="/Images/logo.png"/>
            <Label Content="Электронная приемная компания" HorizontalAlignment="Left" Margin="55,1,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
            <Label Content="Пермского авиационного техникума им. А.Д. Швецова" HorizontalAlignment="Left" Margin="55,24,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid Margin="0,60,0,-0.4">
            <Label Content="Статус" Margin="10,10,735,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Имею статус" Margin="10,41,702,0" VerticalAlignment="Top"/>
            <Label Content="Отметь при наличии:" Margin="22,67,663,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
            <CheckBox x:Name="cbOrphan" Content="ребенок-сирота/ ребенокб оставшийся без попечения родителей" Margin="22,91,384,0" VerticalAlignment="Top"/>
            <CheckBox x:Name="cbDisabled" Content="инвалид" Margin="22,106,704,0" VerticalAlignment="Top"/>
            <CheckBox x:Name="cbLowIncome" Content="малообеспеченный" Margin="22,120,641,0" VerticalAlignment="Top"/>
            <Label Content="Приписанное удостоверение(военный билет)" Margin="10,130,519,0" VerticalAlignment="Top"/>
            <Label Content="Выберите один из вариантов:" Margin="22,152,623,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
            <RadioButton x:Name="rbHasMilitary" Content="имею(при нажатии данной кнопки необходимо ниже прикрепить сканы страниц документа)" Margin="22,178,236,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="rbNoMilitary" Content="не имею" Margin="22,203,703,0" VerticalAlignment="Top" IsChecked="True"/>
            <Label Content="Прикрепить сканы 1-ой и 2-ой приписного удоставерения или военного билета(стр. 1-5, 8-13, 20-21) при наличии " Margin="10,223,134,0" VerticalAlignment="Top"/>
            <Label Content="(Формат документа должен быть PNG, JPEG или PDF,а максимальный размер каждого файла 5 МБ)" Margin="22,254,304,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
            <TextBox x:Name="txtMilitaryScan" Height="24" Margin="12,282,123,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
            <Button x:Name="btnContinue" Content="Продолжить" Margin="632,320,10,5" Click="Continue_Click"/>
            <Button Content="Выбрать" Margin="674,282,10,44" Click="SelectFile_Click"/>
        </Grid>
    </Grid>
</Page>
