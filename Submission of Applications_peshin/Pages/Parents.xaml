<Page x:Class="Submission_of_Applications_peshin.Pages.Parents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Submission_of_Applications_peshin.Pages"
           mc:Ignorable="d" d:DesignWidth="792"
      Title="Parents" Height="868">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <Grid Background="#F8F9FA">
            <Grid Background="White" Height="60" VerticalAlignment="Top">
                <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="40" Source="/Images/logo.png"/>
                <Label Content="Электронная приемная компания" HorizontalAlignment="Left" Margin="55,1,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
                <Label Content="Пермского авиационного техникума им. А.Д. Швецова" HorizontalAlignment="Left" Margin="55,24,0,0" VerticalAlignment="Top"/>
            </Grid>
            <Grid Margin="0,60,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="119*"/>
                    <ColumnDefinition Width="145*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Сведения о родителях:" Margin="15,17,173,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
                <Label Content="Если родитель один, заполнить данные на одного родителя" Margin="22,43,50,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>

                <Label Content="Мать (или законный представитель):" Margin="15,66,118,0" VerticalAlignment="Top" FontStyle="Italic"/>
                <Label Content="Фамилия, имя, отчество (полностью):" Margin="10,86,132,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtMotherName" Height="24" Margin="10,117,10,0" VerticalAlignment="Top"
                    PreviewTextInput="NameTextBox_PreviewTextInput" Grid.ColumnSpan="2"/>

                <Label Content="Дата рождения:" Margin="10,141,250,0" VerticalAlignment="Top"/>
                <DatePicker x:Name="dpMotherBirth" Height="24" Margin="10,172,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

                <Label Content="Место рождения:" Margin="10,196,241,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtMotherBirthPlace" Height="24" Margin="10,227,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

                <Label Content="Должность:" Margin="10,251,273,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtMotherPosition" Height="24" Margin="10,282,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

                <Label Content="Место жительства:" Margin="10,312,234,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtMotherAddress" Height="24" VerticalAlignment="Top" Margin="10,343,10,0" Grid.ColumnSpan="2"/>

                <Label Content="Домашний телефон:" Margin="10,372,225,0" VerticalAlignment="Top"/>
                <Label Content="(при наличии)" Margin="10,392,272,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
                <TextBox x:Name="txtMotherHomePhone" Height="24" Margin="10,420,10,0" VerticalAlignment="Top"
                    PreviewTextInput="PhoneTextBox_PreviewTextInput"/>

                <Label Content="Мобильный телефон:" Margin="39,372,268,0" VerticalAlignment="Top" Grid.Column="1"/>
                <Label Content="(при наличии)" Margin="39,397,321,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red" Grid.Column="1"/>
                <TextBox x:Name="txtMotherMobile" Height="24" Margin="39,420,0,0" VerticalAlignment="Top" Width="386" HorizontalAlignment="Left"
                    PreviewTextInput="PhoneTextBox_PreviewTextInput" Grid.Column="1"/>

                <Label Content="Место регистрации:" Margin="10,454,227,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtMotherRegAddress" Height="24" VerticalAlignment="Top" Margin="10,484,10,0" Grid.ColumnSpan="2"/>

                <CheckBox x:Name="cbMotherAgreement" Content="Настоящим подтверждаю, что персональные данные на третьи лица предоставлены с их согласия" Margin="10,517,216,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <Label Content="Отец (или законный представитель):" Margin="15,562,119,0" VerticalAlignment="Top" FontStyle="Italic"/>
                <Label Content="Фамилия, имя, отчество (полностью):" Margin="10,582,132,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtFatherName" Height="24" Margin="10,613,10,0" VerticalAlignment="Top"
                    PreviewTextInput="NameTextBox_PreviewTextInput" Grid.ColumnSpan="2"/>

                <Label Content="Дата рождения:" Margin="10,637,250,0" VerticalAlignment="Top"/>
                <DatePicker x:Name="dpFatherBirth" Height="24" Margin="10,668,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

                <Label Content="Место рождения:" Margin="10,692,241,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtFatherBirthPlace" Height="24" Margin="10,723,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

                <Label Content="Должность:" Margin="10,747,273,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtFatherPosition" Height="24" Margin="10,778,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

                <Label Content="Место жительства:" Margin="10,808,234,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtFatherAddress" Height="24" VerticalAlignment="Top" Margin="10,839,10,0" Grid.ColumnSpan="2"/>

                <Label Content="Домашний телефон:" Margin="10,868,225,0" VerticalAlignment="Top"/>
                <Label Content="(при наличии)" Margin="10,888,272,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
                <TextBox x:Name="txtFatherHomePhone" Height="24" Margin="10,916,10,0" VerticalAlignment="Top"
                    PreviewTextInput="PhoneTextBox_PreviewTextInput"/>

                <Label Content="Мобильный телефон:" HorizontalAlignment="Left" Margin="39,868,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                <Label Content="(при наличии)" HorizontalAlignment="Left" Margin="39,893,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red" Grid.Column="1"/>
                <TextBox x:Name="txtFatherMobile" Height="24" Margin="13,916,10,0" VerticalAlignment="Top"
                    PreviewTextInput="PhoneTextBox_PreviewTextInput" Grid.Column="1"/>

                <Label Content="Место регистрации:" HorizontalAlignment="Left" Margin="10,950,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtFatherRegAddress" Height="24" VerticalAlignment="Top" Margin="10,980,10,0" Grid.ColumnSpan="2"/>

                <CheckBox x:Name="cbFatherAgreement" Content="Настоящим подтверждаю, что персональные данные на третьи лица предоставлены с их согласия" Margin="10,1013,216,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
            </Grid>
            <Button x:Name="btnContinue" Content="Продолжить" Margin="632,1115,10,10" BorderThickness="0" Click="Continue_Click"/>
        </Grid>
    </ScrollViewer>
</Page>
